<div class="container-md p-3 my-3 mx-auto border border-secondary">
    <h5>Add New BMP Facility</h5>
    <form>
        <div class="row mb-3">
            <label for="inputInspector" class="col-sm-2 col-form-label">Street Address:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputStreetAddress">
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputInspector" class="col-sm-2 col-form-label">City:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputCity">
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputInspector" class="col-sm-2 col-form-label">State:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputState">
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputInspector" class="col-sm-2 col-form-label">Zip Code:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputZipCode">
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputInspector" class="col-sm-2 col-form-label">Facility Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputFacilityName">
            </div>
        </div>
        <div class="row mb-3">
            <label for="inputInspector" class="col-sm-2 col-form-label">Facility Type ID:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputFacilityTypeID">
            </div>
        </div>
        <button type="button" class="btn btn-dark">Submit</button>
    </form>
</div>

<div class="container-md p-3 my-3 mx-auto border border-secondary">
    <h5>Search for a facility</h5>
