                <th>Ponding</th>
                <th>Vegetation</th>
                <th>Control Structure</th>
                <th>Trash</th>
                <th>Overall Function</th>
                <th>Comments</th>
            </tr>
        </thead>
        <tbody>
            {{#each inspections}}
            <tr>
                <td>{{this.bmpInspectionID}}</td>
                <td>{{this.bmpID}}</td>
                <td>{{this.inspectionDate}}</td>
                <td>{{this.name}}</td>
                <td>{{this.inspectEmbankment}}</td>
                <td>{{this.inspectErosion}}</td>
                <td>{{this.inspectSediment}}</td>
                <td>{{this.inspectPonding}}</td>
                <td>{{this.inspectVegetation}}</td>
                <td>{{this.inspectControlStructure}}</td>
                <td>{{this.inspectTrash}}</td>
                <td>{{this.overallFunction}}</td>
                <td>{{this.comments}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

