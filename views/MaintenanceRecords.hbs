{{!-- Form allows for inserting new maintenance records. --}}
<div class="continer-fluid pt-3 pb-5">
    <h5>Add Maintenance Record</h5>
    <form>

        {{!-- Form input for BMP ID --}}
        <div class="row mb-3">
            <label for="inputMaintenanceBMPID" class="col-sm-2 col-form-label">BMP ID:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputMaintenanceBMPID">
            </div>
        </div>

        {{!-- Form input for maintenance date --}}
        <div class="row mb-3">
            <label for="inputMaintenanceDate" class="col-sm-2 col-form-label">Maintenance Date:</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" id="inputMaintenanceDate">
            </div>
        </div>

        {{!-- Form input for party performing maintenance --}}
        <div class="row mb-3">
            <label for="inputMaintenancePerformedBy" class="col-sm-2 col-form-label">Performed By:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputMaintenancePerformedBy">
            </div>
        </div>

        {{!-- Form input for description of maintenance --}}
        <div class="row mb-3">
            <label for="inputMaintenanceDescription" class="col-sm-2 col-form-label">Description of Maintenance:</label>
            <div class="col-sm-10">
                <textarea class="form-control" id="inputMaintenanceDescription"></textarea>
            </div>
        </div>

        {{!-- Form submit --}}
        <button type="submit" class="btn btn-dark">Submit</button>
    </form>
</div>